<section class="dashboard-main">
  <h1> <%= @facade.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= @facade.first_name  %> <%= @facade.last_name %> </li>
    <li> <%= @facade.email%> </li>
  </ul>
  <% if @facade.token %>
    <section class="github">
      <h1>GitHub</h1>
        <h2>Repositories</h2>
        <ul class="repositories">
          <% @facade.repositories.each do |repo| %>
            <li class="repository"><a href = <%= repo.url %> > <%= repo.name %></a></li>
          <% end %>
        </ul>

        <h2>Followers</h2>
        <ul class="followers">
          <% @facade.followers.each do |follower| %>
            <li class="follower"><a href = <%= follower.url %> > <%= follower.login %></a></li>
          <% end %>
        </ul>

        <h2>Following</h2>
        <ul class="followings">
          <% @facade.following.each do |user| %>
            <li class="following"><a href = <%= user.url %> > <%= user.login %></a></li>
          <% end %>
        </ul>
        
    </section>
  <% else %>
    <%= link_to "Connect to GitHub", github_auth_path %>
  <% end %>
  <section>
    <h1>Bookmarked Segments</h1>
  </section>
</section>
