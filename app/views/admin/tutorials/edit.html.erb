  var options = {
    group: 'share',
    animation: 100
  };

events = [
  'onUpdate',
].forEach(function (name) {
  options[name] = function (evt) {
    debugger
    console.log({
      'event': name,
      'this': this,
      'item': evt.item,
      'from': evt.from,
      'to': evt.to
    });
  };
});

var el = document.getElementById('video-list');
var sortable = Sortable.create(el, options);
